    "build:docker": "docker build -t openintegrationhub/meta-data-repository:${VERSION} -f Dockerfile .",
    "start-dev-db": "yarn run-rs -v 4.0.12"
  },
  "dependencies": {
    "@basaas/node-logger": "1.1.5",
    "@openintegrationhub/event-bus": "1.1.3",
    "@openintegrationhub/iam-utils": "1.5.3",
    "ajv": "6.10.2",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "json-pointer": "0.6.0",
    "json-refs": "3.0.13",
    "json-schema-ref-parser": "7.1.2",
    "jszip": "3.2.2",
    "moment": "2.24.0",
    "mongoose": "5.9.3",
    "morgan": "1.9.1",
    "multer": "1.4.2",
    "qs": "6.9.0",
    "readdirp": "3.2.0",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "swagger-ui-express": "4.1.2",
    "tar": "5.0.5",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "eslint": "6.6.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.17.0",
    "get-port": "5.0.0",
    "jest": "24.7.1",
    "mongodb": "3.3.3",
    "mongodb-memory-server": "5.2.11",
    "nock": "11.6.0",
    "nodemon": "1.19.4",
    "run-rs": "0.6.2",
    "supertest": "4.0.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": ""
    },
    "watch": [
      "src/",
      "doc/"
    ],
    "ext": "js json yaml"
  }
