{
  "name": "app-directory",
  "version": "1.3.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "author": "Basaas GmbH",
  "license": "Apache 2.0",
  "scripts": {
    "start": "NODE_ENV='production' node src/index.js",
    "test": "jest --silent=false --runInBand --forceExit",
    "lint": "eslint --fix src/",
    "watch": "nodemon src/index.js",
    "build:docker": "docker build -t openintegrationhub/app-directory:${VERSION} -f Dockerfile .",
    "coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@basaas/node-logger": "1.1.5",
    "@openintegrationhub/event-bus": "^1.1.3",
    "@openintegrationhub/iam-utils": "^1.5.3",
    "base64url": "3.0.1",
    "cors": "^2.8.5",
    "dotenv": "6.2.0",
    "express": "4.17.1",
    "mongoose": "5.9.3",
    "morgan": "^1.9.1",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "swagger-ui-express": "4.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "5.10.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.1.2",
    "get-port": "4.0.0",
    "jest": "24.7.1",
    "mongodb": "3.3.2",
    "mongodb-memory-server": "5.2.11",
    "nock": "10.0.4",
    "nodemon": "1.18.8",
    "supertest": "3.4.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": ""
    },
    "watch": [
      "src/",
      "doc/"
    ],
    "ext": "js json yaml"
  }
}
